{
  "name": "Oscura",
  // -------------------------------------------------------------------------
  // Workbench UI Colors (Controls the visual styling of the UI elements)
  // -------------------------------------------------------------------------
  "colors": {
    // Workbench: Basic editor colors
    "editor.background": "#0B0B0F",
    "editor.foreground": "#E6E6E6",
    "editorLineNumber.foreground": "#32333B",
    "editorLineNumber.activeForeground": "#E6E6E6",
    "editorGroupHeader.tabsBackground": "#0B0B0F",
    "editorWarning.foreground": "#FF5C5C",
    "editorError.foreground": "#FF5C5C",

    // Selection and highlighting
    "editor.selectionBackground": "#EAEC8A16",
    "editor.selectionHighlightBackground": "#FFFFFF08",
    "editor.wordHighlightBackground": "#EAEC8A21",
    "editor.wordHighlightStrongBackground": "#EAEC8A21",
    "selection.background": "#5A5B63",

    // Diff editor
    "diffEditor.insertedTextBackground": "#E6E6E615",
    "diffEditor.insertedLineBackground": "#E6E6E615",
    "diffEditor.removedTextBackground": "#D84F6815",
    "diffEditor.removedLineBackground": "#D84F6815",

    // Editor gutter
    "editorGutter.addedBackground": "#E6E6E6",
    "editorGutter.deletedBackground": "#D84F68",
    "editorGutter.modifiedBackground": "#E6E7A3",

    // Sidebar and activity bar
    "sideBar.background": "#0B0B0F",
    "sideBar.foreground": "#C1C1C1",
    "sideBarTitle.foreground": "#9592A4",
    "sideBarSectionHeader.foreground": "#9592A4",
    "sideBarSectionHeader.background": "#0B0B0F",

    // Activity bar
    "activityBar.background": "#0B0B0F",
    "activityBar.foreground": "#9592A4",
    "activityBarBadge.background": "#E6E7A3",
    "activityBarBadge.foreground": "#000",

    // Title bar
    "titleBar.activeBackground": "#0B0B0F",
    "titleBar.inactiveBackground": "#0B0B0F",
    "titleBar.activeForeground": "#7E7E7E",
    "titleBar.inactiveForeground": "#6A7782",

    // Tabs
    "tab.border": "#0B0B0F",
    "tab.activeBackground": "#0B0B0F",
    "tab.activeBorder": "#E6E6E670",
    "tab.activeForeground": "#FFF",
    "tab.inactiveBackground": "#0B0B0F",

    // Status bar
    "statusBar.background": "#0B0B0F",
    "statusBar.foreground": "#9592A4",
    "statusBar.noFolderBackground": "#0B0B0F",
    "statusBar.debuggingBackground": "#4EBE96",
    "statusBar.debuggingForeground": "#E6E6E6",
    "statusBarItem.remoteBackground": "#E6E7A3",
    "statusBarItem.remoteForeground": "#000",

    // Global UI elements
    "badge.background": "#D6D876",
    "badge.foreground": "#000",
    "button.background": "#E6E7A3",
    "button.hoverBackground": "#D6D876",
    "button.foreground": "#000",
    "focusBorder": "#E6E7A3",

    // List and tree views
    "list.activeSelectionBackground": "#232323",
    "list.activeSelectionForeground": "#E6E6E6",
    "list.inactiveSelectionBackground": "#232323",
    "list.errorForeground": "#FFF",
    "list.warningForeground": "#FFA16C",
    "list.hoverBackground": "#FFFFFF08",
    "list.highlightForeground": "#FFF",

    // Input controls
    "input.background": "#2C2C31",
    "input.foreground": "#E6E6E6",
    "inputOption.activeForeground": "#FFF",

    // Bracket pairs
    "editorBracketHighlight.foreground1": "#5C6974",
    "editorBracketHighlight.foreground2": "#6E678E",
    "editorBracketHighlight.foreground3": "#6A7782",
    "editorBracketHighlight.foreground4": "#6A7782",
    "editorBracketHighlight.foreground5": "#6A7782",
    "editorBracketHighlight.foreground6": "#6A7782",
    "editorBracketHighlight.unexpectedBracket.foreground": "#6A7782",

    // Links and tooltips
    "textLink.foreground": "#479FFA",
    "textLink.activeForeground": "#479FFA",
    "editorHoverWidget.background": "#161616",
    "editorHoverWidget.border": "#282828",
    "editorHoverWidget.foreground": "#E6E6E6",

    // Scrollbar
    "scrollbarSlider.background": "#34343480",
    "scrollbarSlider.hoverBackground": "#343434",

    // Settings and Git
    "settings.modifiedItemIndicator": "#E6E7A3",
    "gitDecoration.modifiedResourceForeground": "#FFF",
    "gitDecoration.untrackedResourceForeground": "#FFF",

    // Quick input/Command palette
    "quickInput.background": "#2C2C31",
    "quickInput.foreground": "#C1C1C1",
    "quickInputList.focusBackground": "#FFFFFF16",
    "quickInputList.focusForeground": "#FFF",
    "descriptionForeground": "#C1C1C1",
    "pickerGroup.foreground": "#C1C1C1"
  },
  
  // -------------------------------------------------------------------------
  // Syntax Highlighting (Defines colors and styles for code syntax and tokens)
  // -------------------------------------------------------------------------
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#46474F"
      }
    },
    {
      "name": "Variables",
      "scope": [
        "variable",
        "string constant.other.placeholder",
        "entity.name.tag"
      ],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Colors",
      "scope": ["constant.other.color"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#D84F68"
      }
    },
    {
      "name": "Keyword, Storage",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#9099A1"
      }
    },
    {
      "name": "Operator, Misc",
      "scope": [
        "keyword.control",
        "constant.other.color",
        "punctuation.definition.tag",
        "punctuation.separator.inheritance.php",
        "punctuation.definition.tag.html",
        "punctuation.definition.tag.begin.html",
        "punctuation.definition.tag.end.html",
        "punctuation.section.embedded",
        "keyword.other.template",
        "keyword.other.substitution"
      ],
      "settings": {
        "foreground": "#9099A1"
      }
    },
    {
      "name": "Tag",
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml",
        "markup.deleted.git_gutter"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Function, Special Method",
      "scope": [
        "entity.name.function",
        "variable.function",
        "support.function",
        "keyword.other.special-method"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Block Level Variables",
      "scope": ["meta.block variable.other"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Other Variable, String Link",
      "scope": ["support.other.variable", "string.other.link"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Number, Constant, Function Argument, Tag Attribute, Embedded",
      "scope": [
        "constant.numeric",
        "support.constant",
        "constant.character",
        "constant.escape",
        "keyword.other.unit",
        "keyword.other",
        "constant.language.boolean"
      ],
      "settings": {
        "foreground": "#F9B98C"
      }
    },
    {
      "name": "String, Symbols, Inherited Class",
      "scope": [
        "string",
        "constant.other.symbol",
        "constant.other.key",
        "meta.group.braces.curly constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Class, Support",
      "scope": [
        "entity.name",
        "support.type",
        "support.class",
        "support.other.namespace.use.php",
        "meta.use.php",
        "support.other.namespace.php",
        "markup.changed.git_gutter",
        "support.type.sys-types"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "CSS Class and Support",
      "scope": [
        "source.css support.type.property-name",
        "source.sass support.type.property-name",
        "source.scss support.type.property-name",
        "source.less support.type.property-name",
        "source.stylus support.type.property-name",
        "source.postcss support.type.property-name",
        "support.type.vendored.property-name.css",
        "source.css.scss entity.name.tag",
        "variable.parameter.keyframe-list.css",
        "meta.property-name.css",
        "variable.parameter.url.scss",
        "meta.property-value.scss",
        "meta.property-value.css"
      ],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Sub-methods",
      "scope": [
        "entity.name.module.js",
        "variable.import.parameter.js",
        "variable.other.class.js"
      ],
      "settings": {
        "foreground": "#D84F68"
      }
    },
    {
      "name": "Language methods",
      "scope": ["variable.language"],
      "settings": {
        "foreground": "#9592A4"
      }
    },
    {
      "name": "entity.name.method.js",
      "scope": ["entity.name.method.js"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "meta.method.js",
      "scope": [
        "meta.class-method.js entity.name.function.js",
        "variable.function.constructor"
      ],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Attributes",
      "scope": [
        "entity.other.attribute-name",
        "meta.property-list.scss",
        "meta.attribute-selector.scss",
        "meta.property-value.css",
        "entity.other.keyframe-offset.css",
        "meta.selector.css",
        "entity.name.tag.reference.scss",
        "entity.name.tag.nesting.css",
        "punctuation.separator.key-value.css"
      ],
      "settings": {
        "foreground": "#54C0A3"
      }
    },
    {
      "name": "HTML Attributes",
      "scope": [
        "text.html.basic entity.other.attribute-name.html",
        "text.html.basic entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "CSS Classes",
      "scope": [
        "entity.other.attribute-name.class",
        "entity.other.attribute-name.id",
        "meta.attribute-selector.scss",
        "variable.parameter.misc.css"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "CSS ID's",
      "scope": ["source.sass keyword.control", "meta.attribute-selector.scss"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Inserted",
      "scope": ["markup.inserted"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Deleted",
      "scope": ["markup.deleted"],
      "settings": {
        "foreground": "#D84F68"
      }
    },
    {
      "name": "Changed",
      "scope": ["markup.changed"],
      "settings": {
        "foreground": "#9592A4"
      }
    },
    {
      "name": "Regular Expressions",
      "scope": ["string.regexp"],
      "settings": {
        "foreground": "#9592A4"
      }
    },
    {
      "name": "Escape Characters",
      "scope": ["constant.character.escape"],
      "settings": {
        "foreground": "#9592A4"
      }
    },
    {
      "name": "URL",
      "scope": ["*url*", "*link*", "*uri*"],
      "settings": {
        "fontStyle": "underline",
        "foreground": "#479FFA"
      }
    },
    {
      "name": "Decorators",
      "scope": [
        "tag.decorator.js entity.name.tag.js",
        "tag.decorator.js punctuation.definition.tag.js"
      ],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "ES7 Bind Operator",
      "scope": [
        "source.js constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#D84F68"
      }
    },
    {
      "name": "JSON Keys (All Levels)",
      "scope": ["support.type.property-name.json"],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Markdown - Plain",
      "scope": [
        "text.html.markdown",
        "punctuation.definition.list_item.markdown"
      ],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markdown - Markup Raw Inline",
      "scope": ["text.html.markdown markup.inline.raw.markdown"],
      "settings": {
        "foreground": "#9592A4"
      }
    },
    {
      "name": "Markdown - Markup Raw Inline Punctuation",
      "scope": [
        "text.html.markdown markup.inline.raw.markdown punctuation.definition.raw.markdown"
      ],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markdown - Heading",
      "scope": [
        "markdown.heading",
        "markup.heading | markup.heading entity.name",
        "markup.heading.markdown punctuation.definition.heading.markdown",
        "markup.heading",
        "markup.inserted.git_gutter"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Markup - Italic",
      "scope": ["markup.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markup - Bold",
      "scope": ["markup.bold", "markup.bold string"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markup - Bold-Italic",
      "scope": [
        "markup.bold markup.italic",
        "markup.italic markup.bold",
        "markup.quote markup.bold",
        "markup.bold markup.italic string",
        "markup.italic markup.bold string",
        "markup.quote markup.bold string"
      ],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markup - Underline",
      "scope": ["markup.underline"],
      "settings": {
        "fontStyle": "underline",
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Markdown - Blockquote",
      "scope": ["markup.quote punctuation.definition.blockquote.markdown"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markup - Quote",
      "scope": ["markup.quote"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markdown - Link",
      "scope": ["string.other.link.title.markdown"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markdown - Link Description",
      "scope": ["string.other.link.description.title.markdown"],
      "settings": {
        "foreground": "#9592A4"
      }
    },
    {
      "name": "Markdown - Link Anchor",
      "scope": ["constant.other.reference.link.markdown"],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Markup - Raw Block",
      "scope": ["markup.raw.block"],
      "settings": {
        "foreground": "#9592A4"
      }
    },
    {
      "name": "Markdown - Raw Block Fenced",
      "scope": ["markup.raw.block.fenced.markdown"],
      "settings": {
        "foreground": "#00000050"
      }
    },
    {
      "name": "Markdown - Fenced Bode Block",
      "scope": ["punctuation.definition.fenced.markdown"],
      "settings": {
        "foreground": "#00000050"
      }
    },
    {
      "name": "Markdown - Fenced Bode Block Variable",
      "scope": [
        "markup.raw.block.fenced.markdown",
        "variable.language.fenced.markdown",
        "punctuation.section.class.end"
      ],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markdown - Fenced Language",
      "scope": ["variable.language.fenced.markdown"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Markdown - Separator",
      "scope": ["meta.separator"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#65737E"
      }
    },
    {
      "name": "Markup - Table",
      "scope": ["markup.table"],
      "settings": {
        "foreground": "#E6E6E6"
      }
    },
    {
      "name": "Brackets",
      "scope": [
        "meta.brace",
        "punctuation.definition.block",
        "punctuation.definition.parameters",
        "punctuation.section.function",
        "meta.brackets",
        "punctuation.definition.brackets",
        "punctuation.definition.dictionary",
        "punctuation.definition.array",
        "punctuation.section",
        "punctuation.section.block",
        "punctuation.section.braces",
        "punctuation.section.group",
        "punctuation.section.parameters"
      ],
      "settings": {
        "foreground": "#5C6974"
      }
    },
    {
      "name": "Python Decorators",
      "scope": [
        "entity.name.function.decorator.python",
        "punctuation.decorator.python"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    // -------------------------- PYTHON SPECIFIC --------------------------
    {
      "name": "Python Built-in Functions & Classes",
      // Added support.type.builtin.python and set bold
      "scope": [
        "support.function.builtin.python",
        "support.function.magic.python",
        "support.type.builtin.python"
      ],
      "settings": {
        "foreground": "#E6E7A3",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Python Special Keywords",
      // Removed operator scopes so we can give them a separate color
      "scope": [
        "keyword.control.flow.python",
        "keyword.control.import.python",
        "keyword.control.statement.python",
        "keyword.operator.member.python",
        "keyword.operator.wordlike.python"
      ],
      "settings": {
        "foreground": "#9099A1"
      }
    },
    {
      "name": "Python Operators",
      // New block for arithmetic, bitwise, etc.
      "scope": [
        "keyword.operator.logical.python",
        "keyword.operator.arithmetic.python",
        "keyword.operator.assignment.python",
        "keyword.operator.comparison.python",
        "keyword.operator.bitwise.python"
      ],
      "settings": {
        "foreground": "#F9B98C"
      }
    },
    {
      "name": "Python Type Hints",
      // Updated color to #E6E7A3 and added bold
      "scope": [
        "storage.type.python",
        "storage.type.annotation.python",
        "storage.type.function.python",
        "storage.type.class.python",
        "storage.type.union.python",
        "storage.type.intersection.python",
        "storage.type.optional.python",
        "storage.type.any.python",
        "storage.type.unknown.python",
        "storage.type.none.python"
      ],
      "settings": {
        "foreground": "#E6E7A3",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Python Self Parameter",
      "scope": ["variable.parameter.function.language.special.self.python"],
      "settings": {
        "foreground": "#9592A4"
      }
    },
    {
      "name": "Python Class Names",
      "scope": [
        "entity.name.type.class.python",
        "entity.name.type.class.python punctuation.definition.class.python"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Python Function Names",
      "scope": [
        "entity.name.function.python",
        "meta.function.python entity.name.function.python"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Python Variables",
      "scope": [
        "variable.other.constant.python",
        "variable.other.enummember.python",
        "variable.other.property.python",
        "variable.other.object.python",
        "variable.other.readwrite.python"
      ],
      "settings": {
        "foreground": "#E6E7A3"
      }
    },
    {
      "name": "Python String Formatting",
      "scope": [
        "constant.character.format.placeholder.other.python",
        "constant.character.format.placeholder.other.python punctuation.definition.format.placeholder.python"
      ],
      "settings": {
        "foreground": "#F9B98C"
      }
    },
    {
      "name": "Python Strings",
      "scope": [
        "string.quoted.single.python",
        "string.quoted.double.python",
        "string.quoted.triple.single.python",
        "string.quoted.triple.double.python",
        "string.regexp.python",
        "string.quoted.single.python punctuation.definition.string.begin.python",
        "string.quoted.single.python punctuation.definition.string.end.python",
        "string.quoted.double.python punctuation.definition.string.begin.python",
        "string.quoted.double.python punctuation.definition.string.end.python",
        "string.quoted.triple.single.python punctuation.definition.string.begin.python",
        "string.quoted.triple.single.python punctuation.definition.string.end.python",
        "string.quoted.triple.double.python punctuation.definition.string.begin.python",
        "string.quoted.triple.double.python punctuation.definition.string.end.python"
      ],
      "settings": {
        "foreground": "#F9B98C"
      }
    },
    {
      // NEW: Make Python docstrings italic with a distinct color
      "name": "Python Docstrings",
      "scope": [
        "string.quoted.docstring.multi.python"
      ],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#9592A4"
      }
    },
    {
      // NEW: Highlight Python built-in constants (True, False, None, etc.)
      "name": "Python Built-in Constants",
      "scope": [
        "constant.language.python"
      ],
      "settings": {
        "foreground": "#F9B98C",
        "fontStyle": "italic"
      }
    },
    {
      // NEW: Give Python function arguments (parameters) a slight italic or distinct color
      "name": "Python Function Arguments",
      "scope": ["variable.parameter.function.python"],
      "settings": {
        "foreground": "#9592A4",
        "fontStyle": "italic"
      }
    }
  ]
}
